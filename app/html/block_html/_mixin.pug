      //remove hidden
      .js-switch-cont(data-item="cond-1" data-group="type")
        .dropdown
          input(type="hidden" name="name" value="0")
          .dropdown-current
            .dropdown-current__val сливочный соус
            +icon("arrow-down-fat","icon")
          .dropdown-menu
            .dropdown-menu__el(data-value="#") Горчица
            .dropdown-menu__el(data-value="#") Кетчуп
        //remove hidden
        .check-el
          label.style-label.style-label--checkbox
